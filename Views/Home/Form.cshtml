
@{
}

@model BookingViewModel

<h1> Fill out this Form Please!</h1>
<style>
    div.validation-message {
        color: rgb(220,53,69);
        font-weight: 500
    }
</style>

<h3 class="text-white text-center p-1">h3</h3>

<form>

    <div class="form-group">
        <label asp-for="Book.BookID">Book#:</label>
        <input class="form-control" disabled value="Book.BookID" />
    </div>

    <div class="form-group">
        <label asp-for="Book.Appointment.AptId">Appointment#:</label>
        <input class="form-control" disabled value="Apt.AptId" />
    </div>

    <div class="form-group">
        <label asp-for="Book.GroupName">Group Name:</label>
        <input asp-for="Book.GroupName" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Book.GroupSize">Group Size:</label>
        <input asp-for="Book.GroupSize" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Book.Email">Email:</label>
        <input asp-for="Book.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Book.Phone">Phone:</label>
        <input asp-for="Book.Phone" class="form-control" />
    </div>

    <div class="float-end">
        <button class="btn-btn-primary" type="submit" value="Make Appointment" />
    </div>
    <button class="btn btn-secondary" href="Home/Index">Cancel</button>

</form>


